DROP TABLE BMO_wc;
CREATE TABLE BMO_wc AS
SELECT word, COUNT(1) AS cnt FROM
(SELECT EXPLODE(SPLIT(LOWER(text), '\\s+')) AS word FROM BMO_ATable) w
GROUP BY word
ORDER BY cnt DESC;

